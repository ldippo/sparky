{
  "include": ["./src/**/*"],
  "compilerOptions": {
    "target": "esnext",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["dom", "es2017", "ESNext"],
    "allowJs": true,
    // "checkJs": true,
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "theme",
    "skipLibCheck": true
  }
}
